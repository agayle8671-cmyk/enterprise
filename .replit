modules = ["nodejs-20", "web", "postgresql-16"]
run = "corepack disable && npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[env]
COREPACK_ENABLE_STRICT = "0"

[deployment]
deploymentTarget = "autoscale"
build = ["sh", "-c", "corepack disable && npm run build"]
publicDir = "dist/public"
run = ["sh", "-c", "corepack disable && node ./dist/index.cjs"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "corepack disable && npm run dev"

[agent]
mockupState = "FULLSTACK"
